<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/yellow"
    android:background="@drawable/ultra11_splash"
    tools:context=".ReferralScreen">

    <!-- Title -->

    <!-- Referral Code EditText -->

    <!-- Submit Button -->

    <!-- Skip Button -->

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Referral Code"

        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#040303" />

    <EditText
        android:id="@+id/editTextReferral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Enter Referral Code"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextReferral"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="382dp"
        android:layout_marginEnd="6dp"
        android:background="#F44336"
        android:elevation="4dp"
        android:paddingStart="32dp"
        android:paddingTop="12dp"
        android:paddingEnd="32dp"
        android:onClick="NavigatetoDashBOard"
        android:paddingBottom="12dp"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSubmit"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="24dp"
        android:text="Skip"
        android:textColor="#070707"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
