<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoard.DashBoard">
    <!-- Header Layout -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Account Icon (Top-Left) -->
        <ImageView
            android:id="@+id/account_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_user"
        android:padding="8dp"/>


        <ImageView
            android:id="@+id/wallet_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/wallet"
        android:padding="8dp"
        android:layout_alignParentEnd="true"/>

    </RelativeLayout>


    <!-- CardView for Contest -->
    <androidx.cardview.widget.CardView
        android:id="@+id/contest_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Contest Date and Time TextView -->
            <TextView
                android:id="@+id/contest_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: October 5, 2023\nTime: 12:00 PM"
                android:layout_gravity="center"
                android:textSize="18sp"/>

        <!-- Match Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            android:layout_marginStart="50dp"
            android:padding="20dp"
            android:layout_marginEnd="20dp">

            <!-- Circular ImageView for Country 1 -->
            <ImageView
                android:id="@+id/country1_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/india"
            android:layout_marginEnd="16dp"/>

            <!-- Versus TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vs"
                android:textSize="24sp"
                android:layout_gravity="center_vertical"/>

            <!-- Circular ImageView for Country 2 -->
            <ImageView
                android:id="@+id/country2_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/pak"
            android:layout_marginStart="16dp"/>
        </LinearLayout>



            <!-- Join Contest Button -->
            <Button
                android:id="@+id/join_contest_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join Contest"
                android:background="@color/black"
                android:textColor="@color/white"
                android:layout_marginStart="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#9C27B0"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
    tools:ignore="MissingConstraints"
    tools:layout_editor_absoluteX="16dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#616060"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
